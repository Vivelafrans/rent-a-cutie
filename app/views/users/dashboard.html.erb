<h1>Dashboard</h1>

<h2>See all your cuties</h2>
 <ul>
  <% @cuties.each do |cutie| %>
  <li><%= link_to cutie.name, cuty_path(cutie) %></li>
  <% end %>
</ul>

<h2>Requests for your Cuties</h2>
<ul>
  <% @user.owner_rent_out.each do |r| %>
  <li> <% @cutie = r[0] %> <%= @cutie.name %> <% @rental = r[1] %>
      <div>
            <p><strong>Start-Time:</strong> <%= @rental.start_date %></p>
            <p><strong>End-Time:</strong> <%= @rental.end_date %></p>
            <p><strong>Rental-Status:</strong> <%= @rental.status %></p>
      </div>
      <%= link_to "Confirm/Decline", edit_cuty_rental_path(@cutie, @rental), class:"btn btn-primary" %></li>
  <% end %>
</ul>

<h2>Status of your Cutie-Requests</h2>
<ul>
  <% @user.renter_rent.each do |r| %>
  <li> <% @cutie = r[0] %> <%= @cutie.name %> <% @rental = r[1] %>
      <div>
            <p><strong>Start-Time:</strong> <%= @rental.start_date %></p>
            <p><strong>End-Time:</strong> <%= @rental.end_date %></p>
            <p><strong>Rental-Status:</strong> <%= @rental.status %></p>
      </div>
  <% end %>
</ul>



<h2>Change your Account data</h2>

<%= link_to "Edit your Profile", edit_user_registration_path, class:"btn btn-primary" %>
